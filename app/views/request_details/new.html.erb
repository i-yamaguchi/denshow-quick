<div class="well well-sm">
  <%= form_for(@request_application) do |f| %>
    <%= render partial: 'shared/request_application_attributes', locals: { f: f } %>
  <% end %>
  <%= link_to '管理情報を修正', edit_request_application_path(@request_application), class: 'btn btn-primary' %>
</div>

<%= render partial: 'shared/application_details_table', locals: { request_application: @request_application } %>

<%= form_for(@request_detail, url: request_application_request_details_path) do |f| %>
  <%= render partial: 'shared/application_detail_attributes', locals: { f: f } %>
  <div class="row">
    <div class="actions">
      <%= f.submit '保存して詳細を続けて入力', class:"btn btn-primary", name: 'save_and_insert' %>
      <%= f.submit '保存して終了', class:"btn btn-secondary", name: 'end_regist' %>
    </div>
  </div>
<% end %>
