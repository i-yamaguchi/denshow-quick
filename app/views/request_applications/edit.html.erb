<h1>Editing Request Application</h1>

<% unless @request_application.close? %>
  <div class="well well-sm">
    <%= form_for(@request_application) do |f| %>
      <%= render partial: 'shared/request_application_attributes', locals: { f: f } %>
      <%= f.submit '変更した内容を保存', class:"btn btn-primary", data: { action: 'update' } %>
    <% end %>
  </div>
  <%= render partial: 'shared/application_details_table', locals: { request_application: @request_application } %>
<% end %>

<div>
  <%= link_to '詳細を追加', new_request_application_request_detail_path(@request_application) %>
</div>

<%= link_to 'Show', @request_application %> |
<%= link_to 'Back', request_applications_path %>
